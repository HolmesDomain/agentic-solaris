# .env

# Target site credentials
TARGET_EMAIL=                        # your login email for the survey site
TARGET_PASSWORD=                     # your login password
TARGET_HOST=https://cashinstyle.com  # base URL of the survey site

# LLM Configuration (choose one provider)
OPENROUTER_API_KEY=                  # OpenRouter API key (if using OpenRouter)
GOOGLE_API_KEY=                      # Google API key (if using Gemini)
LLM_BASE_URL=http://192.168.4.82:1234/v1  # LLM endpoint URL (local or remote)
LLM_API_KEY=not-needed               # API key for LLM (use "not-needed" for local models)
MODEL_NAME=x-ai/grok-4.1-fast:free   # model identifier (e.g., gpt-4, claude-3, local model name)

# Survey behavior
SURVEY_STRATEGY=first_available      # options: shortest_available, highest_payout, first_available, random

# Runtime limits
MAX_PAGES=0                          # max survey pages to process (0 = unlimited)
RESTART_AFTER_PAGES=0                # restart app after N pages (0 = disabled)
PAGE_IDLE_TIMEOUT_MINUTES=10         # timeout if page is idle for too long
RESTART_APP_AFTER_MINUTES=0          # auto-restart app after N minutes (0 = disabled)

# Persona selection
PERSONA=tyler                        # persona filename without .json (options: tyler, tina)